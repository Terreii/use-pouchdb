{
  "name": "use-pouchdb",
  "version": "1.0.0",
  "description": "React Hooks for PouchDB",
  "browser": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "prepublish": "npm run build",
    "test": "jest --watch",
    "test-ci": "jest --ci",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "textlint": "textlint README.md docs/*",
    "update-coc": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "update-contrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "typescript",
    "pouchdb",
    "couchdb"
  ],
  "author": {
    "name": "Christopher Astfalk",
    "email": "christopher.astfalk@icloud.com",
    "url": "http://christopher-astfalk.de/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Terreii/use-pouchdb.git"
  },
  "homepage": "https://christopher-astfalk.de/use-pouchdb",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.0",
    "@types/pouchdb-adapter-memory": "^6.1.3",
    "@types/underscore": "^1.10.1",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pouchdb": "^7.2.1",
    "pouchdb-adapter-memory": "^7.2.1",
    "pouchdb-find": "^7.2.1",
    "pouchdb-mapreduce": "^7.2.1",
    "pouchdb-selector-core": "^7.2.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "react-pouchdb": "^2.0.1",
    "react-test-renderer": "^16.13.1",
    "semantic-release": "^17.0.8",
    "textlint": "^11.6.3",
    "textlint-rule-alex": "^1.3.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "typescript": "^3.9.5",
    "weallbehave": "^1.2.0",
    "weallcontribute": "^1.0.9"
  },
  "dependencies": {
    "@types/pouchdb-core": "^7.0.6",
    "@types/pouchdb-find": "^6.3.5",
    "@types/pouchdb-mapreduce": "^6.1.4",
    "@types/react": "^16.9.38",
    "pouchdb-core": "^7.2.1",
    "pouchdb-errors": "^7.2.1",
    "pouchdb-selector-core": "^7.2.1",
    "pouchdb-utils": "^7.2.1",
    "react": "^16.13.1",
    "underscore": "^1.10.2"
  },
  "peerDependencies": {
    "pouchdb": "^7.2.1",
    "react-pouchdb": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release": {
    "branches": [
      "latest"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true
  }
}
